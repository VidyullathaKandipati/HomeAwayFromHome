<!DOCTYPE html>
<html>
<head>
  <!-- <script src="jquery-ui/i18n/jquery.ui.datepicker-sv.js"></script> -->
  <!-- <script src="https://code.jquery.com/jquery-1.12.4.js"></script> -->
  <!-- <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script> -->
  <title>HomeAwayFromHome</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <%= link_to "Home", root_path %>
  <%= link_to "View properties", properties_path %>
  <%= link_to "Other services", services_path %>

  <% if @current_user.present? %>
    <% if @current_user.admin? %>
      <%= link_to "New property", new_property_path %>
      <%= link_to "New service", new_service_path %>
      <%= link_to "All users", users_path %>
    <% end %>
    <%= link_to "Edit user profile", @current_user %>
    <%= link_to "Logout #{@current_user.firstname}", login_path, :method=>"delete" %>
  <% else %>
    <%= link_to "New user", new_user_path%>
    <%= link_to "Sign In", login_path %>
  <% end %>
</nav>
<%= yield %>

</body>
</html>
