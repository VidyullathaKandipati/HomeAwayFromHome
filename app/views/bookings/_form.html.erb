<%= form_for [@service, @booking] do |f| %>
<div class="row">
<div class="col-md-3"></div>

<div class="col-md-6">
<div class="form-group">
  <%= f.label :user_email, "Email id" %>
  <%= f.email_field :user_email, :value=>@current_user.email, :autofocus=> true,
      :required=>true %>
</div>
  <%# f.label :service %>
  <%# f.collection_select :service_id, @services, :id, :name,
      {:include_blank => "Select a service"}, :required => true %>
<div class="form-group">
  <%= f.label :appointment_time, "Time you need the service" %>
  <%= f.datetime_select :appointment_time, :required=>true, :minute_step => 30,
      start_hour: 8, end_hour: 18, :ampm=>true, :start_year=> Date.today.year %>
</div>
  <%= f.submit :class=>"btn btn-primary"%>
<% end %>
</div>

<div class="col-md-3"></div>
</div>
