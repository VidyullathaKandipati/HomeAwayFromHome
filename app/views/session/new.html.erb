<h1>Sign in</h1>
<% if flash[:error].present? %>
  <p class="bg-danger"><%= flash[:error] %></p>
<% end %>

<div class="row">
  <div class="col-md-3"></div>

  <%= form_tag login_path, :class=>"form-inline col-md-6" do %>
<div class="form-group">
  <%= label_tag "Email" %>
  <%= email_field_tag :email, nil, :autofocus=>true, :required => true, :class=>"form-control"%>
</div>
<div class="form-group">
  <%= label_tag "Password" %>
  <%= password_field_tag :password, nil, :required=>true, :class=>"form-control"%>
</div>

  <%= submit_tag "Login", :class=>"btn btn-primary" %>
<% end %>
<div class="col-md-3"></div>
</div>
