<%= form_for @user do |f| %>
<div class="row">

<div class="col-md-3"></div>

<div class="col-md-6">
<div class="form-group">
  *<%= f.label :firstname %>
  <%= f.text_field :firstname, :autofocus=>true, :required => true, :class=>"form-control" %>
</div>
<div class="form-group">
  *<%= f.label :lastname %>
  <%= f.text_field :lastname, :required => true, :class=>"form-control" %>
</div>
<div class="form-group">
  *<%= f.label :email %>
  <%= f.email_field :email, :required => true, :class=>"form-control" %>
</div>
  <% if @user.id.nil? %>
  <div class="form-group">
    *<%= f.label :password %>
    <%= f.password_field :password, :required => true, :class=>"form-control" %>
  </div>
  <div class="form-group">
    *<%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required=>true, :class=>"form-control" %>
  </div>
  <% end %>
<div class="form-group">
  <%= f.label :contact %>
  <%= f.text_field :contact, :class=>"form-control"%>
</div>
<div class="form-group">
  *<%= f.label :passport_no %>
  <%= f.text_field :passport_no, :required => true, :class=>"form-control" %>
</div>
<div class="form-group">
  <%= f.label :address %>
  <%= f.text_field :address, :class=>"form-control" %>
</div>
<div class="form-group">
  <%= f.label :postcode %>
  <%= f.number_field :postcode, :class=>"form-control" %>
</div>
  <label></label>
  <%= f.submit :class=>"btn btn-primary"%>
<% end %>
</div>

<div class="col-md-3"></div>

</div>
