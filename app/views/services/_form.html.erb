<div class="row">

<div class="col-md-3"></div>
<%= form_for(@service, :html=>{:multipart=>true}) do |f| %>
<div class="col-md-6">
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus=>true, :required => true, :class=>"form-control textfield-border" %>
</div>
<div class="form-group">
  <%= f.label :image %>
  <%= f.cl_image_upload :image, :class=>"form-control textfield-border" %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, :class=>"form-control textfield-border" %>
</div>
<div class="form-group">
  <%= f.label :cost %>
  <%= f.number_field :cost, :required => true, :class=>"form-control textfield-border" %>
</div>

<div class="button-center">
  <%= f.submit :class=>"btn btn-primary"%>
</div>
</div>
<% end %>
<div class="col-md-3"></div>

</div>
